<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.details.DetailsFragment"
    android:background="@color/blue">

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/button_back"
        android:background="@drawable/ic_baseline_arrow_back_24"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/iv_detail_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/spiderman"/>

    <View
        android:id="@+id/opacityFilter"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@android:color/black"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"
        android:background="@color/white"
        android:layout_marginStart="25dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_detail_image2"
            android:padding="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/spiderman"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            android:id="@+id/tv_detail_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/background"/>

    <TextView
        android:id="@+id/tv_detail_description"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="200dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/white"
            android:text="Published:"
            android:id="@+id/tv_detail_published"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_description"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text="01/01/2020"
            android:id="@+id/tv_detail_published_api"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_description"
            app:layout_constraintStart_toEndOf="@id/tv_detail_published"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/white"
            android:id="@+id/tv_detail_price"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_published"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text="R$9,99"
            android:id="@+id/tv_detail_price_api"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_published"
            app:layout_constraintStart_toEndOf="@id/tv_detail_price"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pages:"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/white"
            android:id="@+id/tv_detail_page"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_price"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text="40"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/white"
            android:id="@+id/tv_detail_page_api"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/tv_detail_page"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_price"/>

</androidx.constraintlayout.widget.ConstraintLayout>